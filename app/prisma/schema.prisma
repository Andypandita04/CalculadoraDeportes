generator client {
  provider      = "prisma-client-js"
  output        = "/home/ubuntu/presupuesto_viajero/app/node_modules/.prisma/client"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TripForm {
  id               String   @id @default(cuid())
  continent        String
  country          String
  durationWeeks    Int
  month            Int
  year             Int
  totalAmount      Decimal  @db.Decimal(10, 2)
  totalSavings     Decimal  @db.Decimal(10, 2)
  preferredBenefit String
  fullName         String
  email            String
  sessionId        String?
  ipAddress        String?
  userAgent        String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([country])
  @@index([continent])
  @@index([createdAt])
  @@index([email])
  @@map("trip_forms")
}
