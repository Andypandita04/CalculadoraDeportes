generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/presupuesto_viajero/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Tabla para registrar los formularios de viaje completados
model TripForm {
  id                String   @id @default(cuid())
  
  // Campos requeridos del formulario
  continent         String
  country           String
  durationWeeks     Int      // Duraci√≥n en semanas
  month             Int      // 1-12
  year              Int      // 2025+
  totalAmount       Decimal  @db.Decimal(10,2) // Monto total en MXN
  totalSavings      Decimal  @db.Decimal(10,2) // Ahorro total en MXN
  preferredBenefit  String   // A, B, C, D
  fullName          String
  email             String
  
  // Metadata
  sessionId         String?
  ipAddress         String?  // hasheada para privacidad
  userAgent         String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([country])
  @@index([continent])
  @@index([createdAt])
  @@index([email])
  @@map("trip_forms")
}
